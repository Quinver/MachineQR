@* Test page, you may delete, This page also tells if the test database is connected *@

@model IEnumerable<Project.Models.TestEntity>
@{
    ViewData["Title"] = "Machine Index";
}

<h2>Machine List</h2>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            @if (!Model.Any())
            {
                <div class="alert alert-warning" role="alert">
                    No machines available. Check if database is connected?
                </div>
            }
            else
            {
                <ul class="list-group">
                    @foreach (var item in Model)
                    {
                        <li class="list-group-item">
                            @item.Id - @item.Name
                        </li>
                    }
                </ul>
            }
        </div>
    </div>
</div>