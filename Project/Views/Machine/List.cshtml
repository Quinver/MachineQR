@model IEnumerable<Project.Models.MachineModel>

@{
    ViewData["Title"] = "Machine List";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Machine List</h2>
    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Refresh", "Machine")'">
        Refresh
    </button>
</div>
@if (Model == null || !Model.Any())
{
    <p>No machines available.</p>
}
else
{
    <style>
        .clickable-row {
            cursor: pointer;
        }

        .clickable-row:hover {
            background-color: #f5f5f5;
        }
    </style>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>
                    <a asp-action="List" asp-route-sortOrder="@ViewData["NameSortParm"]">
                        <i class="fas fa-sort"></i>@Html.DisplayNameFor(model => model.Name)
                    </a>
                </th>
                <th>
                    <a asp-action="List" asp-route-sortOrder="@ViewData["RoomSortParm"]">
                        <i class="fas fa-sort"></i>@Html.DisplayNameFor(model => model.Room)
                    </a>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="clickable-row"
                    onclick="location.href='@Url.Action("Bio", "Machine", new { room = item.Room, id = item.Id })'">
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Room)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @if (User.IsInRole("Admin"))
    {
        <div class="text-right">
            <a class="btn btn-success" asp-action="Create">Add Machine</a>
        </div>
    }
}