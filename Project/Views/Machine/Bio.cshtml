@model MachineModel

<style>
      .border-success {
        background-color: #f8f9fa;
    }

    .border-success:hover {
        background-color: #e9f5e9;
        cursor: pointer;
    }

    .fixed-height-image {
        height: 300px;
        object-fit: cover;
    }

    .qr-code {
        margin: 10px;
    }

    

</style>

<div class="container mt-5">
    <div>
        <h1 class="display-3">Machine Bio</h1>
        <h2 class="h3 text-muted mt-4">@Model.Name</h2>
        <p class="lead">Room: @Model.Room</p>
    </div>
    @if (User.IsInRole("Admin"))
    {
        <form asp-action="upload-image" method="post" enctype="multipart/form-data" id="upload-image-form">
            <input type="hidden" name="machineId" value="@Model.Id" />
            <div class="form-group">
                <label for="file-input" class="form-label">Choose Image File</label>
                <input type="file" name="image" class="form-control" id="file-input" />
            </div>
            <button type="submit" class="btn btn-primary" value="submit">Submit</button>
        </form>
    }
    <!-- Center the QR Code if no image is present -->
    @if (string.IsNullOrEmpty(Model.ImageUrl))
    {
        <div class="d-flex justify-content-center">
            <img src="@Url.Action("GenerateQrCode", "Machine", new { room = Model.Room, id = Model.Id, size = "small" })"
                alt="QR Code" class="img-fluid rounded shadow" />
        </div>
    }
    else
    {
        <div class="row mt-4">
            <div class="col-md-6 d-flex flex-column justify-content-end align-items-center mb-3 mb-md-0">
                <div class="container text-center">
                    <img src="@Url.Action("GenerateQrCode", "Machine", new { room = Model.Room, id = Model.Id, size = "small" })"
                        alt="QR Code" class="img-fluid rounded shadow fixed-height-image" />
                </div>
            </div>

            <div class="form-group">
                <label for="qr-quantity" class="form-label">Number of QR Codes to Print</label>
                <input type="hidden" id="qr-code-url" value="@Model.ImageUrl" />
                <input type="number" id="qr-quantity" class="form-control" min="1" value="1" />
            </div>
            <button type="button" class="btn btn-primary" onclick="printQRCodes()">Print QR Codes</button>

            <!-- Image Container -->
            <div class="col-md-6 d-flex flex-column justify-content-end align-items-center">
                <div class="container text-center">
                    <img src="@Url.Action("GetImage", "Machine", new { id = Model.Id })" alt="Machine Image"
                        class="img-fluid rounded shadow fixed-height-image" />
                </div>
            </div>
            @if (User.IsInRole("Admin"))
            {
                <form asp-action="deleteimage" method="post" style="display:inline;">
                    <input type="hidden" name="machineId" value="@Model.Id" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            }
        </div>
    }

    <div class="d-flex align-items-center justify-content-between mt-5">
        <h3 class="h2 text-muted mb-2">PDFs</h3>
        <button type="button" class="btn btn-primary"
            onclick="location.href='@Url.Action("RefreshBio", "Machine", new { machineRoom = Model.Room, machineId = Model.Id })'">
            <i class="bi bi-arrow-clockwise"></i>
        </button>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>File Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.MachinePdfs != null && Model.MachinePdfs.Any())
            {
                @foreach (var pdf in Model.MachinePdfs)
                {
                    <tr>
                        <td>@pdf.FileName</td>
                        <td>
                            <a asp-action="GetPdf" asp-route-id="@pdf.Id" target="_blank" class="btn btn-primary">View</a>
                            <a asp-action="GetPdf" asp-route-id="@pdf.Id" download="@pdf.FileName"
                                class="btn btn-secondary">Download</a>
                            @if (User.IsInRole("Admin"))
                            {
                                <form asp-action="DeletePdf" method="post" style="display:inline;">
                                    <input type="hidden" name="pdfId" value="@pdf.Id" />
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="2">No PDFs available.</td>
                </tr>
            }
        </tbody>
    </table>

    @if (User.IsInRole("Admin"))
    {
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#uploadModal">
            Upload PDF
        </button>

        <!-- Bootstrap Modal -->
        <div class="modal fade" id="uploadModal" tabindex="-1" aria-labelledby="uploadModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="container mt-4 mb-3">
                        <div class="row">
                            <div class="col-12">
                                <div id="drop-zone"
                                    class="border border-success rounded bg-light d-flex flex-column justify-content-center align-items-center mx-auto"
                                    style="height: 300px; max-width: 475px;">
                                    <i class="bi bi-file-earmark-arrow-up text-secondary mb-2" style="font-size: 4rem;"></i>
                                    <p class="text-secondary mb-0">Bestanden hier naar slepen</p>
                                    <ul id="file-list" class="list-unstyled mt-3"></ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer d-flex justify-content-between align-items-center">
                        <div>
                            <form asp-action="UploadPdf" method="post" enctype="multipart/form-data" id="upload-pdf-form"
                                class="d-flex align-items-center">
                                <input type="hidden" name="machineId" value="@Model.Id" />
                                <input type="file" name="files" id="file-upload" class="form-control d-none" accept=".pdf"
                                    multiple />
                                <label for="file-upload" class="btn btn-success me-2">Bestanden</label>
                            </form>
                        </div>
                        <div>
                            <button type="button" class="btn btn-secondary me-2" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary" form="upload-pdf-form">Upload</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <!-- dropzone script-->
    <script>
        const dropZone = document.getElementById('drop-zone');
        const fileInput = document.getElementById('file-upload');
        const fileList = document.getElementById('file-list');
        const form = document.getElementById('upload-pdf-form');

        let uploadedFiles = [];

        function updateFileList(files) {
            fileList.innerHTML = '';
            files.forEach(file => {
                const li = document.createElement('li');
                li.textContent = file.name;
                fileList.appendChild(li);
            });
        }

        dropZone.addEventListener('dragover', (event) => {
            event.preventDefault();
            dropZone.classList.add('border-primary');
        });

        dropZone.addEventListener('dragleave', () => {
            dropZone.classList.remove('border-primary');
        });

        dropZone.addEventListener('drop', (event) => {
            event.preventDefault();
            dropZone.classList.remove('border-primary');

            const newFiles = Array.from(event.dataTransfer.files);
            uploadedFiles = [...uploadedFiles, ...newFiles];

            updateFileList(uploadedFiles);

            const dataTransfer = new DataTransfer();
            uploadedFiles.forEach(file => dataTransfer.items.add(file));
            fileInput.files = dataTransfer.files;
        });

        // Handle manual file input
        fileInput.addEventListener('change', () => {
            const newFiles = Array.from(fileInput.files);
            uploadedFiles = [...uploadedFiles, ...newFiles];

            updateFileList(uploadedFiles);

            const dataTransfer = new DataTransfer();
            uploadedFiles.forEach(file => dataTransfer.items.add(file));
            fileInput.files = dataTransfer.files;
        });
        function printQRCodes() {
            const quantity = document.getElementById('qr-quantity').value;

            const room = '@Model.Room';
            const id = '@Model.Id';

            const qrCodeUrl = `/machine/qrcode/${room}/${id}?size=large`;
            const printWindow = window.open('', '_blank');
            printWindow.document.write('<html><head><title>Print QR Codes</title></head><body><div class="grid-container"><style>');
            printWindow.document.write(`
                            .grid-container {
                        display: grid;
                        grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
                      }

                      .grid-item {
                        padding: 5px;
                      }

                      .grid-item img {
                        width: 100%;
                      }</style>`);
            for (let i = 0; i < quantity; i++) {
                printWindow.document.write('<div class="qr-code grid-item"><img src="' + qrCodeUrl + '" alt="QR Code" /></div>');
            }

            printWindow.document.write('</div></body></html>');
            printWindow.document.close();
            printWindow.onafterprint = function () {
                printWindow.close();
            };
            window.setTimeout(() => {
                printWindow.print();
            }, 50);
        }s
    </script>
}
<div class="content" style="margin-bottom: 50px;">
    <!-- Inhoud boven de footer -->
</div>
