<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Project.styles.css" asp-append-version="true" />

    <style>
        body {
            background-color: #f0f0f0; /* Lichtgrijze achtergrondkleur */
        }

        .navbar {
            background-color: #81BA27 !important; /* Maakt de navbar groen */
        }

        .navbar a.nav-link,
        .navbar a.navbar-brand {
            color: white !important; /* Zorgt ervoor dat de tekst wit is */
            padding: 5px; /* Vaste padding om verschuiving te voorkomen */
        }

        .navbar a.nav-link:hover,
        .navbar a.nav-link.active {
            color: #ffffff !important; /* Verandert tekstkleur naar wit bij hover en actief */
            background-color: #1c94d4 !important; /* Verandert achtergrond bij hover en actief */
            padding: 5px; /* Houdt padding consistent */
            border-radius: 0; /* Geen afgeronde hoeken */
        }

        .navbar-logo {
            height: 60px; /* Pas de hoogte van het logo aan */
            width: auto; /* Houd de verhoudingen van de afbeelding intact */
        }

        .navbar-brand {
            padding: 0; /* Verwijder extra padding rond de afbeelding */
        }

        .footer {
            background-color: #2a2f35 !important;
            color: white !important; /* Zorgt ervoor dat de tekst wit is */
            position: relative; /* Zorg dat positionering mogelijk is */
            padding: 10px;
        }

        .footer-image {
            height: 50px; /* Pas de grootte van de afbeelding aan */
            width: auto;
            position: absolute;
            bottom: 10px; /* Ruimte vanaf de onderkant */
            right: 10px; /* Ruimte vanaf de rechterkant */
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/huisstijl/logo2.png" alt="Project Logo" class="navbar-logo">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Machine"
                                asp-action="List">Lijst</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home"
                                asp-action="Privacy">Privacy</a>
                        </li>

                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Project - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
        <img src="~/huisstijl/TAB2.png" alt="Footer Image" class="footer-image">
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
